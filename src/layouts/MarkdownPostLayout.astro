---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout>
  <article class="prose prose-blue dark:prose-invert max-w-none">
    <h1>{frontmatter.title}</h1>
    <div class="metadata">
      <p><em>{frontmatter.description}</em></p>
      <time datetime={frontmatter.pubDate}>
        {frontmatter.pubDate.toString().slice(0,10)}
      </time>
      <span class="author">by {frontmatter.author}</span>
    </div>

    <div class="tags">
      {frontmatter.tags.map((tag) => (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div>

    <slot />
  </article>
</BaseLayout>

<style>
  /* Base styles */
  article {
    max-width: 65ch;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Typography */
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-heading);
  }

  /* Metadata section */
  .metadata {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1rem;
  }

  .author {
    margin-left: 1rem;
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }

  .tag {
    margin: 0;
    padding: 0.3rem 0.8rem;
    border-radius: 2rem;
    background-color: var(--color-tag-bg);
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .tag a {
    color: var(--color-tag-text);
    text-decoration: none;
  }

  .tag:hover {
    background-color: var(--color-tag-bg-hover);
  }

  /* Content styling */
  :global(.prose) {
    line-height: 1.8;
  }

  :global(.prose p) {
    margin-bottom: 1.5rem;
  }

  :global(.prose a) {
    color: var(--color-link);
    text-decoration: none;
    border-bottom: 1px solid var(--color-link-underline);
    transition: all 0.2s ease;
  }

  :global(.prose a:hover) {
    color: var(--color-link-hover);
    border-bottom-color: var(--color-link-hover);
  }

  :global(.prose blockquote) {
    border-left: 4px solid var(--color-blockquote-border);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-blockquote-text);
  }

  :global(.prose code) {
    background-color: var(--color-code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }

  /* CSS Variables for theming */
  :root {
    --color-heading: #1a202c;
    --color-text: #2d3748;
    --color-text-muted: #718096;
    --color-border: #e2e8f0;
    --color-link: #3182ce;
    --color-link-hover: #2c5282;
    --color-link-underline: #bee3f8;
    --color-tag-bg: #ebf8ff;
    --color-tag-bg-hover: #bee3f8;
    --color-tag-text: #2b6cb0;
    --color-code-bg: #f7fafc;
    --color-blockquote-border: #cbd5e0;
    --color-blockquote-text: #4a5568;
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    :root {
      --color-heading: #f7fafc;
      --color-text: #e2e8f0;
      --color-text-muted: #a0aec0;
      --color-border: #2d3748;
      --color-link: #63b3ed;
      --color-link-hover: #90cdf4;
      --color-link-underline: #2c5282;
      --color-tag-bg: #2a4365;
      --color-tag-bg-hover: #2c5282;
      --color-tag-text: #ebf8ff;
      --color-code-bg: #2d3748;
      --color-blockquote-border: #4a5568;
      --color-blockquote-text: #cbd5e0;
    }
  }
</style>