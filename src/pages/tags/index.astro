---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

const waves = await getCollection("waves");
const depths = await getCollection("depths");
const allPosts = [...waves, ...depths];

const tags = [...new Set(allPosts.flatMap((post) => post.data.tags))].sort();
const pageTitle = "Tags";
---

<BaseLayout pageTitle={pageTitle}>
	<h1 class="text-4xl font-bold mb-4">{pageTitle}</h1>
	<div class="flex flex-wrap gap-2">
		{tags.map((tag) => (
			<a
				href={`/tags/${tag}`}
				class="px-3 py-1 rounded-full border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
			>
				{tag}
			</a>
		))}
	</div>
</BaseLayout>
