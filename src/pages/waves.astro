---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('waves');
const pageTitle = "Waves"
---

<BaseLayout>
	<h1 class="text-4xl font-bold mb-4">{pageTitle}</h1>
	<p class="mb-8">Fluid stream of consciousness on life, technology, and the universe</p>
	<ul>
		{allPosts.map((post) => <BlogPost url={`/waves/${post.id}`} title={post.data.title} date={post.data.pubDate}/>)}
	</ul>
</BaseLayout>
