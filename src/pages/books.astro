---
import BaseLayout from '../layouts/BaseLayout.astro';
import BooksComponent from '../components/Books.astro';

const pageTitle = "Books";
const pageDescription = "A collection of books I've read and am currently reading.";
---

<BaseLayout>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {pageTitle}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        {pageDescription}
      </p>
    </header>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">
        Currently Reading
      </h2>
      <BooksComponent shelf="currently-reading" />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">
        Recently Finished
      </h2>
      <BooksComponent limit={4} sortBy="date" />
    </section>

    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">
        Highest Rated
      </h2>
      <BooksComponent limit={4} sortBy="rating" />
    </section>
  </div>
</BaseLayout>
